.xnavi
  --header-height 64px
  --copy-padding 24px
  --max-width 85%

  &-visual
    height 744px
    width 100%
    background-size cover
    background url('../img/xnavi-background.png') no-repeat center
    display flex
    flex-wrap wrap
    justify-content center
    align-items center
    align-content center

    &-copy
      margin 12px
      padding var(--copy-padding)
      width 350px
      border-radius 10px

      &-title
        padding 0 0 12px

    &-app
      margin 12px
      height 350px

  &-page
    height auto
    padding 280px 0
    width 100%
    display flex
    flex-direction column
    justify-content center
    align-items center

    &-title
      padding 0 18px 18px

    &-body
      max-width var(--max-width)
      padding 3px

    &-section
      margin 50px 0
      display flex
      flex-direction column
      justify-content center
      align-items center

    &-image
      width 480px
      margin 36px

    &-movie
      margin 12px 0
      height 270px
      width 480px

      &-wrapper
        text-align center

  &-header
    padding 0
    height var(--header-height)

  &-publication
    padding 48px 0
    height auto

    &-name
      width 48%
      display flex
      flex-wrap wrap
      justify-content center
      align-content center

    &-logo
      width var(--max-width)
      display flex
      padding 12px 0
      justify-content center
      flex-wrap wrap

      &-image
        height 40px
        margin 12px 30px

@media screen and (max-width 479px)
  .xnavi
    &-visual
      &-copy
        width calc(var(--max-width) - var(--copy-padding)*2)
      &-app
        height auto
        width var(--max-width)
    &-page
      &-movie
        height 180px
        width 320px

      &-image
        height auto
        width var(--max-width)
